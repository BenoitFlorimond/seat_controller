{
    "version": "2.0.0",
    "windows": {
        "options": {
            "cwd": "${workspaceRoot}",
            "env": {
                "IDF_PATH": "${workspaceRoot}/esp-idf",
                "PATH": "${workspaceRoot}/esp-idf/tools;${workspaceRoot}/tools/windows/cmake/3.24.0/bin;${workspaceRoot}/tools/windows/ninja/1.10.2;${workspaceRoot}/tools/windows/openocd-esp32/bin;${workspaceRoot}/tools/windows/xtensa-esp32-elf/bin;${env:PATH}"
            }
        },
    },
    "linux": {
        "options": {
            "cwd": "${workspaceRoot}",
            "env": {
                "IDF_PATH": "${workspaceRoot}/esp-idf",
                "PATH": "${workspaceRoot}/esp-idf/tools;${workspaceRoot}/tools/linux/cmake/3.25.0/bin;${workspaceRoot}/tools/linux/ninja/1.11.1;${workspaceRoot}/tools/linux/openocd-esp32/bin;${workspaceRoot}/tools/linux/xtensa-esp32-elf/bin;${env:PATH}"
            }
        },
    },
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "idf.py build",
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "idf.py clean",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Clean all",
            "type": "shell",
            "command": "idf.py fullclean",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Flash",
            "type": "shell",
            "command": "idf.py flash",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Monitor",
            "type": "shell",
            "command": "idf.py monitor",
            "problemMatcher": []
        },
        {
            "label": "Size",
            "type": "shell",
            "command": "idf_size.py ./build/zpce_embedded_cb_keyboard.map",
            "problemMatcher": [],
            "dependsOn": "Build"
        },
        {
            "label": "Erase",
            "type": "shell",
            "command": "idf.py erase_flash",
            "problemMatcher": []
        },
        {
            "label": "Menu config",
            "type": "shell",
            "command": "start idf.py menuconfig",
            "problemMatcher": []
        },
        {
            "label": "Run requirements",
            "type": "shell",
            "command": "python -m pip install --user -r ./esp-idf/requirements.txt",
            "problemMatcher": []
        },
    ]
}
